exercicio 8 
preco1=float(input("Digite o preço do primeiro produto: "))
preco2=float(input("Digite o preço do segundo produto: "))
preco3=float(input("Digite o preço do terceiro produto: "))
if preco1 < preco2 < preco3:
  print("Você deve comprar o primeiro produto")
elif preco2 < preco1 < preco3:
  print("Você deve comprar o segundo produto")
else:
  print("Você deve comprar o terceiro produto")

exercicio 9 
num1 = float(input("Digite o primeiro número: "))
num2 = float(input("Digite o segundo número: "))
num3 = float(input("Digite o terceiro número: "))
if num1 < num2 < num3:
  print("Números em ordem decrescente:", num3, num2, num1) #certo
elif num1 < num2 and num2 > num3:
  print("Números em ordem decrescente:", num2, num3, num1) #certo
elif num1 > num2 and num2 < num3:
  print("Números em ordem decrescente:", num1, num3, num2) #certo
elif num2 > num1 and num2 > num3:
  print("Números em ordem decrescente:", num2, num1, num3)

